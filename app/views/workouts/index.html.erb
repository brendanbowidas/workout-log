
<div class="container text-center">
    <h1>My Workouts</h1>
    
    <%= div_for @workouts, class: "container" %>
    
    <% @workouts.each do |w| %>
    
    <h2><%= w.workout %></h2>
    
    <p><strong>Date:</strong> <%= w.date.strftime("%m/%d/%Y") %></p>
    
    <p><strong>Comments:</strong> <%= w.comments %></p>
    
    <p><strong>Duration:</strong> <%=w.length %></p>
    <%= link_to "View Workout", workout_path(w), class: "btn btn-primary" %>
    <% end %>
    </div>
</div>

